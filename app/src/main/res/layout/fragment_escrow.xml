<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EscrowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="367dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#E7ECF0"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="315dp"
                android:layout_marginTop="20dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#12181717">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:text="주문자"
                        android:textColor="#34353F"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/buyer_name"
                        android:layout_marginLeft="10dp"
                        android:text="ID"
                        android:textColor="#34353F"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#12181717">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:text="주문상품"
                        android:textColor="#34353F"
                        android:textSize="15dp" />
                </TableRow>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="리케 "
                        android:textColor="#34353F"
                        android:textSize="15dp">

                    </TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/product_name"
                        android:layout_marginTop="6dp"
                        android:background="#FAFAFA" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/product_name"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="40dp"
                        android:background="#FAFAFA" />

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_name"
                        android:layout_alignLeft="@id/product_name"
                        android:layout_marginLeft="-1dp"
                        android:layout_marginTop="15dp"
                        android:text="상품금액"
                        android:textColor="#34353F"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="133dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_name"
                        android:layout_alignLeft="@id/product_price"
                        android:layout_marginLeft="174dp"
                        android:layout_marginTop="13dp"
                        android:gravity="right"
                        android:text="2000Token"
                        android:textColor="#34353F"
                        android:textSize="15dp" />

                </RelativeLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="#12181717">

                    <TextView
                        android:id="@+id/payment_info"
                        android:layout_width="133dp"
                        android:layout_marginLeft="10dp"
                        android:text="결제금액"
                        android:textColor="#34353F"
                        android:textSize="15dp" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="보유이더"
                        android:textColor="#34353F"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/own_price"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/payment_info"
                        android:layout_gravity="right"
                        android:layout_marginLeft="70dp"
                        android:text="5000 Token"
                        android:textColor="#35353F"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="결제이더"
                        android:textColor="#34353F"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/payment_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/payment_info"
                        android:layout_gravity="right"
                        android:layout_marginLeft="70dp"
                        android:text="-2000 Token"
                        android:textColor="#D12B3B"
                        android:textSize="15dp" />
                </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/product_name"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginRight="0dp"
                        android:background="#FAFAFA" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="결제 후 보유이더"
                        android:textColor="#34353F"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/after_own"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/payment_info"
                        android:layout_gravity="right"
                        android:layout_marginLeft="70dp"
                        android:text="3000 Token"
                        android:textColor="#4157D6"
                        android:textSize="15dp" />
                </LinearLayout>

            </TableLayout>


        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bt_corner"
                android:fontFamily="@font/tmonmonsori"
                android:text="결제하기"
                android:textColor="@color/mainColor" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>