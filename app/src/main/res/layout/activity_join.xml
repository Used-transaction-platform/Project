<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity"
    android:background="@color/mainColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_weight="3.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--로고-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/join_id_edit"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID를 입력해주세요">

                </EditText>
                <!--<Button-->
                    <!--android:id="@+id/id_check_btn"-->
                    <!--android:layout_weight="3.5"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textColor="#FDFDFD"-->
                    <!--android:background="#00ff0000"-->
                    <!--android:fontFamily="@font/tmonmonsori"-->
                    <!--android:text="중복확인"/>-->
            </LinearLayout>
            <EditText
                android:id="@+id/join_pw_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:hint="비밀번호를 입력해 주세요"
                />
            <EditText
                android:id="@+id/join_pw_check_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:hint="비밀번호를 한번 더 입력해 주세요."
                />
            <TextView
                android:id="@+id/check_pw_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="> 비밀번호를 입력해 주세요"/>
            <EditText
                android:id="@+id/join_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이름을 입력해 주세요."
                />
            <EditText
                android:id="@+id/join_phone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="연락처를 입력해 주세요."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="ex)010-xxxx-xxxx"/>

            <TextView
                android:id="@+id/result_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/join_btn"
                android:background="@drawable/bt_corner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#2673F3"
                android:fontFamily="@font/tmonmonsori"
                android:text="회원가입"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>