<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:id="@+id/horizontal_scroll">
            <LinearLayout
                android:id="@+id/image_linear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:scrollbars="horizontal">
            </LinearLayout>
        </HorizontalScrollView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#E9EFF5"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="상품명"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:text="가격"
                        android:textColor="#000000" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="#F7F8FD"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/seller_id"
                        android:layout_width="198dp"
                        android:layout_height="wrap_content"
                        android:text="판매자 ID"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="49dp"
                        android:layout_height="19dp"
                        android:background="@color/cardview_shadow_start_color"
                        android:text="일반회원"
                        android:textSize="10dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="#F7F8FD"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/book_detail_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test Message"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_weight="1.9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/buy_btn"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_corner"
                android:fontFamily="@font/tmonmonsori"
                android:text="구매하기"
                android:textColor="#2673F3"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>